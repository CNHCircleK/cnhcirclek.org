<article class="teaser panel panel-default">
    <div class="panel-body">
        <h3>{{ post.title }}</h3>

        <p class="date">{{ post.post_date|date }}</p>

        <p>
            {{ post.content }}
        </p>
    </div>
    <div class="panel-footer clearfix">
        <div class="teaser__author">Posted by <a
                    href="{{ post.author.link }}">{{ post.author.name }}</a></div>
    </div>
</article>