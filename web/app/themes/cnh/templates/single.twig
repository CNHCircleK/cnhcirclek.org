{% extends "page.twig" %}

{% block post_header_left %}
    <h1>{{ post.title }}</h1>
    <p>{{ post.post_date|date }}</p>
{% endblock %}

{% block post_header_right %}
    <img src="http://lorempixel.com/60/60" alt="{{ post.author.name }}" class="img-circle">
    <div class="author">
        <div class="author__name">{{ post.author.name }}</div>
        <div class="author__other">Position</div>
    </div>
{% endblock %}

{% block after_content %}
    {% if post.comment_status != 'closed' %}
        <div id="comments">
            <div class="row">
                <div class="col-xs-12">
                    {{ fn('comments_template') }}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
